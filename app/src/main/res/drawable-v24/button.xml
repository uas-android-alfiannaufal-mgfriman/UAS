<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
            android:color="#FF5C5C5C" />
            <stroke
            android:width="1dp"
            android:color="#FF5C5C5C" />
            <corners
            android:radius="3dp" />
            <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
            android:startColor="#FF5C5C5C"
            android:endColor="#FF5C5C5C"
            android:angle="270" />
            <corners
            android:radius="100dp" />
        </shape>
    </item>

</selector>